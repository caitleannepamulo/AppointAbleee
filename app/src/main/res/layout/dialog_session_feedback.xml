<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutFeedbackDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvFeedbackTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Session feedback"
        android:textColor="#000000"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_bold" />

    <TextView
        android:id="@+id/tvFeedbackSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add feedback for this session."
        android:textColor="#444444"
        android:textSize="13sp"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="6dp" />

    <EditText
        android:id="@+id/etSessionFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type session feedback..."
        android:inputType="textMultiLine"
        android:minLines="4"
        android:maxLines="8"
        android:gravity="top|start"
        android:padding="12dp"
        android:layout_marginTop="14dp"
        android:background="@android:drawable/edit_text"
        android:fontFamily="@font/poppins" />

</LinearLayout>

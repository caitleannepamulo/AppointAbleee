<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/greetings_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#fff58a">

        <TextView
            android:id="@+id/morningNight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good Morning,"
            android:textColor="#212121"
            android:textSize="15sp"
            android:fontFamily="@font/poppins" />

        <TextView
            android:id="@+id/nameOfUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#212121"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_bold"
            android:layout_below="@id/morningNight"
            android:layout_marginTop="4dp" />

    </RelativeLayout>

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#fafafa"
        app:mcv_firstDayOfWeek="sunday"
        app:mcv_showOtherDates="all"
        app:mcv_tileWidth="48dp"
        app:mcv_tileHeight="40dp" />

    <TextView
        android:id="@+id/tvSelectedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/btnAddForSelectedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Appointment"
        android:textColor="#5271FF"
        android:textStyle="bold"
        android:padding="6dp"
        android:layout_marginStart="20dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvAppointmentIndicators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:textColor="#444444" />

    <TextView
        android:id="@+id/tvNextLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Upcoming Appointment"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvNextAppointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:clipToPadding="false"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAppointments"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:clipToPadding="false" />

</LinearLayout>
